FROM alpine:3.6
MAINTAINER Flo Technologies Engineering Team


################################################################################
# Add App
################################################################################
# Place flat jar and configs to /app
ADD ./target/ /app/build/target/
RUN cp -dR /app/build/target/scala-*/*.jar /app/

WORKDIR /app


################################################################################
# Volumes
################################################################################

VOLUME ["/app"]

################################################################################
# Entrypoint
################################################################################

WORKDIR /app