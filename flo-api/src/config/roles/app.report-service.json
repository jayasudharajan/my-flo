{
  "roles": "app.report-service",
  "allows": [
    {
      "resources": ["User"],
      "permissions": [
        "retrieve", 
        "retrieveAll",
        "retrieve_v2"
      ]
    },
    {
      "resources": ["UserDetail"],
      "permissions": [
        "retrieve",
        "retrieveWithUser"
      ]
    },
    {
      "resources": ["Location"],
      "permissions": [
        "retrieveMonthlyUsage",
        "retrieveByLocationId",
        "retrieveFullActivityLog",
        "retrieveAnalytics",
        "retrievePendingNotifications",
        "retrieveDailyLeakTestResult",
        "retrieve_v2"
      ]
    },
    {
      "resources": ["Alarm"],
      "permissions": [
        "retrieveDeliveryAnalytics"
      ]
    },
    {
      "resources": ["ICD"],
      "permissions": [
        "retrieveAll", 
        "retrieveLatestFixtureAverages"
      ]
    },
    {
      "resources": ["Waterflow"],
      "permissions": ["retrieveTransmittingDevices"]
    },
    {
      "resources": ["WeeklyReport"],
      "permissions": ["issueUnsubscribeLink"]
    }
  ]
}