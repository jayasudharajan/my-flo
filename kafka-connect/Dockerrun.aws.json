{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "jolokia",
      "host": {
        "sourcePath": "/usr/share/java/jolokia"
      }
    },
    {
      "name": "telegraf-config",
      "host": {
        "sourcePath": "/etc/telegraf"
      }
    },
    {
      "name": "host-proc",
      "host": {
        "sourcePath": "/proc"
      }
    },
    {
      "name": "docker-sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "kafka-connect",
      "image": "confluentinc/cp-kafka-connect:5.1.0",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 8778,
          "containerPort": 8778
        },
        {
          "hostPort": 49999,
          "containerPort": 49999
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "kafka-connect-connectors"
        }
      ],

      "mountPoints": [ {
        "sourceVolume": "jolokia",
        "containerPath": "/var/lib/jolokia",
        "readOnly": true
        }
      ],
      "essential": true,
      "memory": 2048
    },
    {
      "name": "kafka-connect-connectors",
      "image": "098786959887.dkr.ecr.us-west-2.amazonaws.com/flo-kafka-connect-connectors:latest",
      "essential": true,
      "memory": 64
    },
    {
      "name": "telegraf",
      "image": "telegraf:1.9.2",
      "memory": 256,
      "essential": false,
      "mountPoints": [
        {
          "sourceVolume": "telegraf-config",
          "containerPath": "/etc/telegraf",
          "readOnly": true
        },
        {
          "sourceVolume": "host-proc",
          "containerPath": "/host/proc",
          "readOnly": true
        },
        {
          "sourceVolume": "docker-sock",
          "containerPath": "/var/run/docker.sock"
        }
      ],
      "environment": [
        {
          "name": "HOST_PROC",
          "value": "/host/proc"
        }
      ],
      "links": [
        "kafka-connect:runner"
      ]
    }
  ]
}
