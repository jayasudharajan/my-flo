{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ES2017",
      "DOM"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": true,
    "target": "ES2017",
    "outDir": "lib",
    "module": "commonjs"
  },
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".idea/**/*",
    "lib/**/*",
  ]
}